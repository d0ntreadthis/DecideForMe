#:kivy 1.9.0

<Button>:
	background_normal: ''
	background_color: 0, 0, .2, 1

	text_size: self.size
	font_size: '20sp'
	valign: 'middle'
	halign: 'center'


<ActivityInput>:
	hint_text: "Enter the activity name"
	font_size: '20sp'
	multiline: False


<DeleteBtn>:
	size_hint: .2, 1
	text: "Del"


<ActivityLayout>:
	orientation: 'horizontal'
	height: 50
	size_hint_x: 1
	size_hint_y: None

	ActivityInput:
	DeleteBtn:


<ActivitiesLayout>:
	cols: 1
	spacing: 10

	ActivityLayout:
	ActivityLayout:
	ActivityLayout:
	ActivityLayout:
	ActivityLayout:
	ActivityLayout:
	ActivityLayout:
	ActivityLayout:
	ActivityLayout:
	ActivityLayout:
	ActivityLayout:
	ActivityLayout:
	ActivityLayout:


<MyScrollView>:
	#size_hint: 1, None
	#size: 500, 320
	#pos_hint: {'center_x': .5, 'center_y': .5}

	ActivitiesLayout:
		id: activitieslayout
		size_hint_x: 1
		size_hint_y: None
		height: self.minimum_height
		do_scroll_x: False


<AddBtn>:
	text: "Add new activity"


<DecideBtn>:
	text: "Decide for me!"


<MenuLayout>:
	orientation: 'horizontal'
	spacing: 2

	AddBtn:
	DecideBtn:



<MainWidget>:
	orientation: 'vertical'
	spacing: 10

	canvas:
		Color:
			rgba: 1, 1, 1

		Rectangle:
			pos: self.pos
			size: self.size

	#ActivitiesLayout:

	MyScrollView:
	MenuLayout:
		size_hint: 1, 0.15