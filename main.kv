#:kivy 1.9.0

<Button>:
	background_normal: ''
	#background_color: 0.376,0.827,0.208, 1
	background_color: 0.471,0.122,0.373, 1


	text_size: self.size
	font_size: '20sp'
	valign: 'middle'
	halign: 'center'


<ActivityInput>:
	hint_text: "Enter the activity name"
	font_size: '30sp'
	multiline: False
	#foreground_color: 0.725,0.694,0.012, 1
	foreground_color: 0.431,0.039,0.098, 1


<DeleteBtn>:
	size_hint: .2, 1
	text: "Del"
	on_press: self.callback()


<ActivityLayout>:
	orientation: 'horizontal'
	height: 150
	size_hint: 1, None

	ActivityInput:
		id: activityinput
	DeleteBtn:
		id: deletebtn


<ActivitiesLayout>:
	id: activitieslayout
	cols: 1
	spacing: 10
	size_hint: 1, None
	height: self.minimum_height
	do_scroll_x: False

	ActivityLayout:
	ActivityLayout:


<MyScrollView>:

	ActivitiesLayout:
		id: activitieslayout


<AddBtn>:
	text: "Add new activity"
	on_press: self.callback()


<DecideBtn>:
	text: "Decide for me!"
	on_press: self.callback()


<MenuLayout>:
	orientation: 'horizontal'
	spacing: 2
	size_hint: 1, 0.15

	AddBtn:
		id: addbtn
	DecideBtn:
		id: decidebtn


<MainWidget>:
	id: mainwidget
	menulayout: menulayout
	myscrollview: myscrollview
	padding: 10

	orientation: 'vertical'
	spacing: 10

	canvas:
		Color:
			#rgba: 0.812,0.957,0.392, 1
			#rgba: 0.89,0.961,0.686, 1
			rgba: 1, 1, 1, 1

		Rectangle:
			pos: self.pos
			size: self.size

	MyScrollView:
		id: myscrollview
	MenuLayout:
		id: menulayout