#:kivy 1.9.0

<Button>:
	background_normal: ''
	background_color: 0, 0, .2, 1

	text_size: self.size
	font_size: '20sp'
	valign: 'middle'
	halign: 'center'


<ActivityInput>:
	hint_text: "Enter the activity name"
	font_size: '20sp'
	multiline: False


<DeleteBtn>:
	size_hint: .2, 1
	text: "Del"
	on_press: self.callback()


<ActivityLayout>:
	orientation: 'horizontal'
	height: 50
	size_hint: 1, None

	ActivityInput:
		id: activityinput
	DeleteBtn:
		id: deletebtn


<ActivitiesLayout>:
	id: activitieslayout
	cols: 1
	spacing: 10
	size_hint: 1, None
	height: self.minimum_height
	do_scroll_x: False

	ActivityLayout:
	ActivityLayout:


<MyScrollView>:

	ActivitiesLayout:
		id: activitieslayout


<AddBtn>:
	text: "Add new activity"
	on_press: self.callback()


<DecideBtn>:
	text: "Decide for me!"
	on_press: self.callback()


<MenuLayout>:
	orientation: 'horizontal'
	spacing: 2
	size_hint: 1, 0.15

	AddBtn:
		id: addbtn
	DecideBtn:
		id: decidebtn



<MainWidget>:
	id: mainwidget
	menulayout: menulayout
	myscrollview: myscrollview

	orientation: 'vertical'
	spacing: 10

	canvas:
		Color:
			rgba: 1, 1, 1

		Rectangle:
			pos: self.pos
			size: self.size

	MyScrollView:
		id: myscrollview
	MenuLayout:
		id: menulayout