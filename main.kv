#:kivy 1.9.0

<Button>:
	background_normal: ''
	background_color: 0, 0, .2, 1

	text_size: self.size
	font_size: '20sp'
	valign: 'middle'
	halign: 'center'


<ActivityInput>:
	id: activityinput
	hint_text: "Enter the activity name"
	font_size: '20sp'
	multiline: False


<DeleteBtn>:
	id: deletebtn
	size_hint: .2, 1
	text: "Del"
	on_press: self.callback()


<ActivityLayout>:
	id: activitylayout
	orientation: 'horizontal'
	height: 50
	size_hint_x: 1
	size_hint_y: None

	ActivityInput:
	DeleteBtn:


<ActivitiesLayout>:
	id: activitieslayout
	cols: 1
	spacing: 10
	size_hint_x: 1
	size_hint_y: None
	height: self.minimum_height
	do_scroll_x: False

	ActivityLayout:
	ActivityLayout:
	ActivityLayout:
	ActivityLayout:
	ActivityLayout:
	ActivityLayout:
	ActivityLayout:
	ActivityLayout:
	ActivityLayout:
	ActivityLayout:
	ActivityLayout:
	ActivityLayout:



<MyScrollView>:
	id: myscrollview

	ActivitiesLayout:


<AddBtn>:
	id: addbtn
	text: "Add new activity"


<DecideBtn>:
	id: decidebtn
	text: "Decide for me!"


<MenuLayout>:
	id: menulayout
	orientation: 'horizontal'
	spacing: 2
	size_hint: 1, 0.15

	AddBtn:
	DecideBtn:



<MainWidget>:
	id: mainwidget
	orientation: 'vertical'
	spacing: 10

	canvas:
		Color:
			rgba: 1, 1, 1

		Rectangle:
			pos: self.pos
			size: self.size

	#ActivitiesLayout:

	MyScrollView:
	MenuLayout: